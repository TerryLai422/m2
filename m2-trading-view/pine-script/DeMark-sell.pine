//plotshape(isSellSetupActive and not isSellCountdownActive and sellSetupCounter==8 ? low : na, title="Buy Setup", location=location.abovebar, style=shape.labeldown, text="8", color=color.green, textcolor=color.white, size=size.tiny)
plotshape(isSellSetupActive and sellSetupCounter==9 ? high : na, title="Sell Setup", location=location.abovebar, style=shape.labeldown, text="9", color=color.green, textcolor=color.white, size=size.tiny)

// === Plot Sell Countdown using plotshape() ===
plotshape(isSellCountdownActive and not isSellOnhold and sellCountdownCounter == 1 ? high * 0.99: na, title="Sell Countdown", location=location.absolute, style=shape.labeldown, text="1", color=color.new(color.black, 100), textcolor=color.red, size=size.tiny)
