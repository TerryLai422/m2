plotshape(isSellCountdownActive and not isSellOnhold and sellCountdownCounter == 10 ? high * 0.99: na, title="Sell Countdown", location=location.absolute, style=shape.labeldown, text="10", color=color.new(color.black, 100), textcolor=color.red, size=size.tiny)
